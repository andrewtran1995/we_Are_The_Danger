{
  "manifest_version": 2,

  "name": "Save-All",
  "description": "An extension that saves the entire current webpage. (Supposed to save all images on current webpage.)",
  "version": "1.0",

  "icons":{
    "16": "16_icon.png",
    "48": "48_icon.png",
    "128": "128_icon.png"
  },

  "browser_action": {
    "default_icon": "128_icon.png",
    "default_title": "Save-All",
    "default_popup": "popup window.html"
  },

  "permissions": [
    "activeTab",
    "downloads"
  ],

  "background": {
    "scripts": ["dom.js"]
  },

  "content_scripts":[
  {
    "matches": ["http://*/*", "https://*/*"],
    "js": ["saveAll.js"]
  }
  ]
}
